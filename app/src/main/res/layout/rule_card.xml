<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rule_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:padding="20dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/rule_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/rule_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:autoSizeMaxTextSize="10sp"
            android:maxLines="1"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/rule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/rule_index"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp">

        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/amend_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rule_index"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>